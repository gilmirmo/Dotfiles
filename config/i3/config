# i3 config
# ==========
#
### Variables
#
# Mod Key (Mod1 for Alt, Mod4 for Super_key)
set $mod Mod4

# direction keys
set $left h
set $down j
set $up k
set $right l

# preferred terminal emulator
set $term kitty

# Launcher
set $launcher dmenu_run

# browser
set $browser qutebrowser

# power commands
set $shutdown shutdown -h now
set $reboot reboot
set $netrefresh systemctl restart NetworkManager
set $lock slock
set $hibernate sudo -A systemctl suspend


### Appearance
#
# Wallpaper
exec feh --bg-scale '/home/gilmirmo/.config/wall.jpg' 
# Font
font pango:DejaVu Sans Mono 8

#
# Bar:
#
    # basics
    bar { 
            status_command i3status
            position top
            colors {
                separator #666666
                background #222222
                statusline #dddddd
                focused_workspace #0088CC #0088CC #ffffff
                active_workspace #333333 #333333 #ffffff
                inactive_workspace #333333 #333333 #888888
                urgent_workspace #2f343a #900000 #ffffff
        }
    # Toggle the bar
        mode hide
        hidden_state hide
        modifier $mod
    }

#
# Borders & Gaps:
#
    # window borders
    default_border pixel 5

    #gaps
    gaps inner 10
    gaps outer 0
    

### Keybinding
#
# Basics: 
#
    # Open terminal emulator
    bindsym $mod+Return exec $term
    
    # Open browser
    bindsym $mod+w exec $browser
    
    # Initiate launcher
    bindsym $mod+space exec $launcher

    # kill focused window
    bindsym $mod+q kill

    # reload configuration file
    bindsym $mod+Shift+r reload

    # exit i3
    bindsym $mod+Shift+x exit

#
# Volume & Brightness Controls
#
    # Volume up/down
    bindcode 122 exec amixer -q set Master 5%-
    bindcode 123 exec amixer -q set Master 5%+
    bindcode 121 exec amixer -q set Master toggle

    # Brightness up/down
    bindcode 232 exec brightnessctl set 5%-
    bindcode 233 exec brightnessctl set 5%+

#
# Move around:
#
    focus_follows_mouse no

    # move around focus
    bindsym $mod+$left focus left
    bindsym $mod+$down focus down
    bindsym $mod+$up focus up
    bindsym $mod+$right focus right
    # with arrow keys
    bindsym $mod+Left focus left
    bindsym $mod+Down focus down
    bindsym $mod+Up focus up
    bindsym $mod+Right focus right

    # move window around
    bindsym $mod+Shift+$left move left
    bindsym $mod+Shift+$down move down
    bindsym $mod+Shift+$up move up
    bindsym $mod+Shift+$right move right
    # with arrow keys
    bindsym $mod+Shift+Left move left
    bindsym $mod+Shift+Down move down
    bindsym $mod+Shift+Up move up
    bindsym $mod+Shift+Right move right

    # resize window
   #bindsym $mod+Ctrl+$left exec --no-startup-id i3resize left
   #bindsym $mod+Ctrl+$down exec --no-startup-id i3resize down
   #bindsym $mod+Ctrl+$up exec --no-startup-id i3resize up
   #bindsym $mod+Ctrl+$right exec --no-startup-id i3resize right
   ## with arrow keys
   #bindsym $mod+Ctrl+Left exec --no-startup-id i3resize left
   #bindsym $mod+Ctrl+Down exec --no-startup-id i3resize down
   #bindsym $mod+Ctrl+Up exec --no-startup-id i3resize up
   #bindsym $mod+Ctrl+Right exec --no-startup-id i3resize right

#
# Wokspaces:
#
    # swich to to workspace
    bindsym $mod+1 workspace 1
    bindsym $mod+2 workspace 2
    bindsym $mod+3 workspace 3
    bindsym $mod+4 workspace 4
    bindsym $mod+5 workspace 5
    bindsym $mod+6 workspace 6
    bindsym $mod+7 workspace 7
    bindsym $mod+8 workspace 8
    bindsym $mod+9 workspace 9
    bindsym $mod+0 workspace 10

    # move container to workspace
    bindsym $mod+Shift+1 move container to workspace 1
    bindsym $mod+Shift+2 move container to workspace 2
    bindsym $mod+Shift+3 move container to workspace 3
    bindsym $mod+Shift+4 move container to workspace 4
    bindsym $mod+Shift+5 move container to workspace 5
    bindsym $mod+Shift+6 move container to workspace 6
    bindsym $mod+Shift+7 move container to workspace 7
    bindsym $mod+Shift+8 move container to workspace 8
    bindsym $mod+Shift+9 move container to workspace 9
    bindsym $mod+Shift+0 move container to workspace 10

#
# Layout:
#
    # split horizontally/vertically
    bindsym $mod+b splith
    bindsym $mod+v splitv

    # switch current container between different layout styles
    bindsym $mod+e layout toggle split
    bindsym $mod+s layout tabbed
    bindsym $mod+Shift+s layout stacking

    # fullscreen
    bindsym $mod+f fullscreen

    # toggle between tiling and floating
    bindsym $mod+Shift+t floating toggle
    # swap focus between the tiling area and the floating area
    bindsym $mod+t mode_toggle


### System
#
# Power:
#
    # shutdown
    bindsym $mod+Delete exec --no-startup-id prompt "Shutdown system?" "$shutdown"
    # reboot
    bindsym $mod+BackSpace exec --no-startup-id prompt "Reboot system?" "$reboot"
    # lockscreen
    bindsym --release $mod+End exec --no-startup-id $lock
    
#
# Autostart:
#
    # compositor
    #exec --no-startup-id compton
    # nightlight
    exec redshift
    exec --no-startup-id /usr/lib/geoclue-2.0/demos/agent
    # clipboard
    exec clipmenud
    # make pointer disappear when typing
    exec xbanish
